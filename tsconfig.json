{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es5",
      "es6",
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ]
  },
  "include": [
    "src",
    "prisma"
  ],
  "exclude": [
    "src/main/docs"
  ]
}